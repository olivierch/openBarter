-- create sequence ob.tquality_id_seq;
create table ob.tquality (
    id bigserial UNIQUE not NULL,
    name text,
    own name not NULL, 
    qtt bigint default 0,
    created timestamp,
    updated timestamp,
    PRIMARY KEY (id),
    UNIQUE(name,own)
