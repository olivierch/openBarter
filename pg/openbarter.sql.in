create index tquality_own_idx on ob.tquality(own);
CREATE TRIGGER trig_befa_tquality BEFORE INSERT 
	OR UPDATE ON ob.tquality FOR EACH ROW 
	EXECUTE PROCEDURE ob.ftime_updated();
	
